scriptpath=`readlink -e $0`
scriptdir=`dirname $scriptpath`

. $scriptdir/common.sh

detect_help_request

parse_cli "$@"

find_tests $scriptdir @prefix@


check_loopback()
{
    $TOOLS_DIR/omx_info | grep -qE '^ .* \(board #0 name lo addr 00:00:00:00:00:00\)' 2>&1
}

check_localhost()
{
    $TOOLS_DIR/omx_info | grep -qE '^ localhost \(board #0 name lo addr 00:00:00:00:00:00\)' 2>&1
}


do_test 'TEST omx_info' $TOOLS_DIR/omx_info	|| fatal 'TEST omx_info failed'
do_test 'CHECK loopback' check_loopback		|| fatal 'CHECK loopback failed'
do_test 'CHECK localhost' check_localhost	|| fatal 'CHECK localhost failed'
