scriptpath=`readlink -e $0`
scriptdir=`dirname $scriptpath`

. $scriptdir/common.sh

detect_help_request

parse_cli "$@"

find_tests $scriptdir @prefix@

opts=
sender_opts='-e 3 -d localhost'

app=$1
shift

while [ $# -gt 0 ] ; do
    case $1 in
	--) break ;;
	*)  opts="$opts $1"
    esac

    shift
done

while [ $# -gt 0 ] ; do sender_opts="$sender_opts $1"; shift; done

$app $opts & pid=$!

# I think this a bit dirty but I have not better...
sleep 1
ps | grep -q $pid || exit 1

$app $opts $sender_opts && ret=$?

wait $pid

exit $ret
