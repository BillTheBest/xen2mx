scriptpath=`readlink -e $0`
scriptdir=`dirname $scriptpath`
helpersdir=$scriptdir/../helpers

. $helpersdir/common.sh

detect_help_request "$@"

parse_cli "$@"

find_tests $scriptdir @prefix@

test_wrapper()
{
    $MXTESTS_DIR/mx_msg_loop -R -P 11 & _pid=$!
    sleep 20

    echo 'Killing the program now that it ran for 20s...'
    kill -9 $_pid 2>/dev/null
}

do_test 'random msg loop with native networking during 20s' test_wrapper
