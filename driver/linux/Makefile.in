exec_prefix	=	@exec_prefix@
prefix  =       @prefix@
libdir	=	@libdir@

KCC	=	@KCC@
MKDIR_P	=	@MKDIR_P@
LN_S	=	@LN_S@
INSTALL	=	@INSTALL@

LINUX_DIR	=	@LINUX_BUILD@
OPEN_MX_DIR	=	@abs_builddir@
INSTALL_MOD_PATH	=	$(libdir)/modules/@LINUX_RELEASE@
MODULE_OBJS	=	open-mx.ko

.PHONY: all installonly install clean distclean wc

# Cannot avoid symlinking source files here and using O=builddir M=srcdir
# since configure would have to generate Kbuild and omx_checks.h in srcdir
# instead of builddir

all:
	@if test "@srcdir@" != "@builddir@" ; then \
		echo Linking kernel module source files to local directory ; \
		for file in $(wildcard @srcdir@/*.[ch]) ; do test -e $$(basename $$file) || $(LN_S) $$file ; done ; \
	fi
	@echo Building kernel module
	+$(MAKE) -C $(LINUX_DIR) M=$(OPEN_MX_DIR) CC=$(KCC)

installonly:
	@echo "Installing kernel module to $(INSTALL_MOD_PATH)"
	@if test ! -d $(DESTDIR)$(INSTALL_MOD_PATH); then \
		echo "Directory didn't exist, creating it" ; \
		$(MKDIR_P) -p $(DESTDIR)$(INSTALL_MOD_PATH) ; \
	fi
	$(INSTALL) -m 0644 $(MODULE_OBJS) $(DESTDIR)$(INSTALL_MOD_PATH)/

install: all installonly

clean:
	@echo Cleaning kernel module build
	+$(MAKE) -C $(LINUX_DIR) M=$(OPEN_MX_DIR) CC=$(KCC) clean
	@if test "@srcdir@" != "@builddir@" ; then \
		echo Removing links to kernel module source files in local directory ; \
		for file in $(wildcard @srcdir@/*.[ch]) ; do $(RM) $$(basename $$file) ; done ; \
	fi

# nothing special needed for distclean here
distclean: clean

wc:
	wc -cl *.[ch]
